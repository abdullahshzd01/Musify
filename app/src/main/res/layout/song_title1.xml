<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_weight="0.04"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:padding="1dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9:41"
                android:textColor="@color/white"
                android:gravity="left"
                android:paddingLeft="35dp"
                android:textStyle="bold"
                android:textSize="25dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:gravity="right">

                <ImageView
                    android:padding="1dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_signal_cellular_alt_24"/>

                <ImageView
                    android:padding="1dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_wifi_24"/>

                <ImageView
                    android:rotation="90"
                    android:padding="1dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_battery_full_24"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.085"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_arrow_back_24"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Song Title"
                    android:textSize="33dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="0.057"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="7dp"
        android:paddingLeft="35dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="By Artist"
            android:textColor="#D3B42A"
            android:textSize="25dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="0.608"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:padding="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:weightSum="1"
            android:gravity="center">

            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:paddingBottom="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_outline_account_circle_24"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/background1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="What an amazing song"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:paddingLeft="25dp"
                        android:paddingTop="13dp"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.085"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:paddingBottom="12dp"
        android:paddingRight="7dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="0.85"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:src="@drawable/background1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Post a comment"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="0.15"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/background1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_play_arrow_24"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.125"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:background="#27252A"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:paddingTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/like"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:paddingBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Liked"
                    android:textColor="#ffffff"
                    android:textStyle="normal"
                    android:textSize="18dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:background="#27252A"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:paddingTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_add_24"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:paddingBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Add"
                    android:textColor="#ffffff"
                    android:textStyle="normal"
                    android:textSize="18dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:background="#27252A"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:paddingTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_search_24"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:paddingBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Search"
                    android:textColor="#ffffff"
                    android:textStyle="normal"
                    android:textSize="18dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:background="#27252A"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:paddingTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_outline_watch_later_24"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:paddingBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Listen Later"
                    android:textColor="#ffffff"
                    android:textStyle="normal"
                    android:textSize="18dp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>