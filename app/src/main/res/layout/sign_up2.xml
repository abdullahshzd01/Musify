<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="0.04"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:padding="1dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9:41"
                android:textColor="@color/white"
                android:gravity="left"
                android:paddingLeft="35dp"
                android:textStyle="bold"
                android:textSize="25dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:gravity="right">

                <ImageView
                    android:padding="1dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_signal_cellular_alt_24"/>

                <ImageView
                    android:padding="1dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_wifi_24"/>

                <ImageView
                    android:rotation="90"
                    android:padding="1dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_battery_full_24"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="0.06"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="7dp"
        android:paddingRight="17dp">

        <TextView
            android:layout_width="match_parent"
            android:gravity="right"
            android:text="Sign In"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="0.9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingBottom="5dp"
            android:weightSum="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_weight="0.7"
                android:layout_width="150dp"
                android:layout_height="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo_background"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo"/>


            </RelativeLayout>

            <TextView
                android:layout_weight="0.3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Musify"
                android:textColor="@color/white"
                android:textSize="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="0.24"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/signin_background"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:layout_weight="0.2"
                            android:layout_width="0dp"
                            android:paddingLeft="20dp"
                            android:src="@drawable/facebook_logo"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_weight="0.8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#4168B0"
                            android:gravity="center"
                            android:text="Continue with Facebook"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.24"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/signin_background"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:layout_weight="0.2"
                            android:layout_width="0dp"
                            android:paddingLeft="20dp"
                            android:src="@drawable/google_logo"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_weight="0.8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#DD4437"
                            android:gravity="center"
                            android:text="Continue with Google"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.24"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/signin_background"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        android:textSize="25dp"
                        android:textColor="#D3B42A"
                        android:gravity="center"
                        android:text="Create Account"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>